@model IEnumerable<WebProject.Models.TacGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}

<h2>List of authors</h2>

<p>
    @Html.ActionLink("Add new author", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Author Name
        </th>
        <th>
            Address
        </th>
        <th>
            Phone
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenTacGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaTacGia }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaTacGia }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaTacGia })
        </td>
    </tr>
}

</table>
